<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

    <com.example.musiceffect.widget.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="播放"/>

        <Button
                android:id="@+id/test_bezier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贝塞尔"/>

        <Button
                android:id="@+id/ancient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="古风"/>

        <Button
                android:id="@+id/reverberation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="混响"/>

    </com.example.musiceffect.widget.FlowLayout>

    <com.example.musiceffect.widget.EffectView
            android:id="@+id/effect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.example.musiceffect.widget.CircleImageView
            android:id="@+id/album"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@mipmap/album"
            android:visibility="visible"/>

</FrameLayout>